<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pt.novaleaf.www.maisverde.AlterarPassActivity">

    <include layout="@layout/app_bar_settings"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>

    <AutoCompleteTextView
        android:id="@+id/passVelha"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:hint="Password atual"/>

    <AutoCompleteTextView
        android:id="@+id/passNova"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:hint="Nova password"/>

    <AutoCompleteTextView
        android:id="@+id/passNovaConfirm"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:hint="Confirme a nova password"/>

    <Button
        android:id="@+id/bChange"
        android:layout_width="171dp"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/buttonshape"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="Alterar Password"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeAddPost" />


</LinearLayout>
